{
  "$schema": "https://raw.githubusercontent.com/biomejs/biome/refs/heads/main/packages/%40biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/prisma/**",
      "!**/dist/**",
      "!**/.git/**",
      "!**/*.vue",
      "!**/*.svelte",
      "!**/fresh.gen.ts"
    ]
  },
  "assist": {
    "enabled": true,
    "actions": {
      "recommended": true,
      "source": {
        "recommended": true,
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedProperties": "on",
        "useSortedKeys": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "bracketSameLine": true,
    "attributePosition": "multiline",
    "bracketSpacing": true,
    "expand": "auto"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "noParameterAssign": "info",
        "noNonNullAssertion": "info",
        "useEnumInitializers": "off",
        "useLiteralEnumMembers": "error",
        "useAsConstAssertion": "error",
        "useSelfClosingElements": "error",
        "useConst": "error",
        "useSingleVarDeclarator": {
          "fix": "safe",
          "level": "error"
        },
        "noUnusedTemplateLiteral": "error",
        "useNumberNamespace": "error",
        "noInferrableTypes": "error",
        "useExponentiationOperator": "error",
        "useTemplate": {
          "fix": "safe",
          "level": "warn"
        },
        "useDefaultParameterLast": "error",
        "useImportType": "error",
        "useExportType": "error",
        "noUselessElse": "error",
        "useShorthandFunctionType": "error",
        "useNodejsImportProtocol": {
          "fix": "safe",
          "level": "error"
        },
        "noEnum": "warn",
        "noExportedImports": "on",
        "useArrayLiterals": "info",
        "useAtIndex": {
          "level": "info",
          "fix": "safe"
        },
        "useConsistentArrayType": "info",
        "useFilenamingConvention": "info",
        "useForOf": "info",
        "useFragmentSyntax": "warn",
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "strictCase": false,
            "requireAscii": true,
            "conventions": [
              {
                "selector": {
                  "kind": "objectLiteralMember"
                },
                "formats": ["camelCase", "PascalCase"],
                "match": "[a-zA-Z$_][a-zA-Z0-9_]*"
              }
            ]
          }
        },
        "useShorthandAssign": "info",
        "useThrowOnlyError": "on",
        "useTrimStartEnd": "on"
      },
      "a11y": {
        "useButtonType": "off"
      },
      "correctness": {
        "noUnusedFunctionParameters": "warn",
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn",
        "noConstAssign": "error",
        "noConstantMathMinMaxClamp": "on",
        "noInvalidBuiltinInstantiation": "on",
        "noInvalidConstructorSuper": "error",
        "noInvalidDirectionInLinearGradient": "on",
        "noInvalidGridAreas": "on",
        "noInvalidUseBeforeDeclaration": "error",
        "noSelfAssign": "on",
        "noUndeclaredDependencies": "off",
        "noUndeclaredVariables": "error",
        "noUnreachable": "warn",
        "noUnreachableSuper": "warn",
        "noUnusedLabels": "error",
        "noUnusedPrivateClassMembers": "info",
        "noVoidTypeReturn": "error",
        "useHookAtTopLevel": "error",
        "useIsNan": "warn",
        "useJsxKeyInIterable": "warn",
        "useValidTypeof": "error",
        "useYield": "warn",
        "useValidForDirection": "info"
      },
      "complexity": {
        "noUselessCatch": "warn",
        "noUselessConstructor": "warn",
        "noUselessStringConcat": "error",
        "useDateNow": "warn",
        "noStaticOnlyClass": "off",
        "noThisInStatic": {
          "fix": "safe",
          "level": "warn"
        },
        "noForEach": "warn",
        "noUselessContinue": "info",
        "noUselessRename": "on",
        "noUselessSwitchCase": "info",
        "noUselessLabel": "on",
        "noEmptyTypeParameters": "on",
        "noUselessTernary": "info",
        "noUselessUndefinedInitialization": "info",
        "useWhile": "info"
      },
      "suspicious": {
        "noImplicitAnyLet": "warn",
        "noDoubleEquals": {
          "level": "warn",
          "fix": "safe",
          "options": {
            "ignoreNull": false
          }
        },
        "noAssignInExpressions": "off",
        "noAsyncPromiseExecutor": "warn",
        "noCompareNegZero": "error",
        "noDuplicateCase": "warn",
        "noDuplicateElseIf": "on",
        "noDuplicateObjectKeys": "on",
        "noExplicitAny": "info",
        "noExtraNonNullAssertion": "warn",
        "noFallthroughSwitchClause": "warn",
        "noGlobalIsFinite": "on",
        "noGlobalIsNan": "on",
        "noIrregularWhitespace": "on",
        "noLabelVar": "on",
        "noMisleadingInstantiator": "on",
        "noMisrefactoredShorthandAssign": "on",
        "noRedundantUseStrict": "on",
        "noSelfCompare": "on",
        "noSuspiciousSemicolonInJsx": "on",
        "noTemplateCurlyInString": "on",
        "noVar": "on",
        "useAwait": "warn",
        "useDefaultSwitchClauseLast": "error",
        "useErrorMessage": "on",
        "useGetterReturn": "on",
        "useIsArray": "error",
        "useNumberToFixedDigitsArgument": "info",
        "useStrictMode": "info"
      },
      "nursery": {
        "noBitwiseOperators": "off",
        "useSortedClasses": {
          "fix": "safe",
          "level": "warn",
          "options": {
            "attributes": ["classList", "class", "className"]
          }
        },
        "noAwaitInLoop": "info",
        "noConstantBinaryExpression": "info",
        "noFloatingPromises": "warn",
        "noImportCycles": "error",
        "noTsIgnore": "on",
        "useConsistentObjectDefinition": {
          "level": "warn",
          "options": {
            "syntax": "shorthand"
          }
        },
        "noNestedComponentDefinitions": "info",
        "noShadow": "on",
        "noUnresolvedImports": "off",
        "noUselessEscapeInString": "warn",
        "noUselessUndefined": "on",
        "useAdjacentGetterSetter": "info",
        "useConsistentResponse": "on",
        "useExhaustiveSwitchCases": "on",
        "useExportsLast": "off",
        "useIndexOf": "warn",
        "useJsonImportAttribute": "warn",
        "useNumericSeparators": "info",
        "useObjectSpread": "off",
        "useSingleJsDocAsterisk": "on",
        "useSymbolDescription": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "asNeeded",
      "bracketSameLine": false,
      "quoteStyle": "double",
      "attributePosition": "auto",
      "bracketSpacing": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "enabled": true,
      "expand": "auto",
      "lineEnding": "lf"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "globals": ["Deno"]
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "trailingCommas": "none",
      "bracketSpacing": true,
      "expand": "auto"
    },
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": false
    }
  },
  "html": {
    "formatter": {
      "enabled": true,
      "attributePosition": "auto",
      "indentScriptAndStyle": false,
      "whitespaceSensitivity": "css",
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "bracketSameLine": false,
      "selfCloseVoidElements": "always"
    }
  },
  "css": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "enabled": true,
      "quoteStyle": "double",
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf"
    },
    "linter": {
      "enabled": true
    }
  },
  "graphql": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "quoteStyle": "double",
      "bracketSpacing": true
    },
    "linter": {
      "enabled": true
    }
  }
}
