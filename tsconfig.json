{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "./dist/tmp",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "noUncheckedIndexedAccess": true,
    "importHelpers": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests"]
}
