    "declaration": true,
    "declarationDir": "./dist/types",
    "noEmit": false,
    "outDir": "./dist/types",
    "module": "ESNext",
    "target": "ESNext",
    "stripInternal": true
  },
  "include": ["src/*.ts"],
  "exclude": ["src/tests/*"]
}
